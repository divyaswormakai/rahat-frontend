<div id="<%=id%>" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Add a User</h4>
      </div>
      <div class="modal-body">
        <form action="" method="post" id="frmTest">
          <div class="row">
            <div class="col-md-7 form-group">
              <label for="name">Name:</label>
              <input type="text" class="form-control" name="name" required />
            </div>
            <div class="col-md-5 form-group">
              <label for="password">Password</label>
              <div class="input-group">
                <input type="text" name="password" class="form-control" required />
                <span class="input-group-append">
                  <button
                    type="button"
                    class="btn btn-primary"
                    onclick="$('#<%=id%>').trigger('generate-password')"
                    title="Create random password"
                  >
                    <i class="fa fa-random"></i>
                  </button>
                </span>
              </div>
            </div>
            <div class="col-md-7 form-group">
              <label for="email">Email:</label>
              <input type="email" class="form-control" name="email" required />
            </div>
            <div class="col-md-5 form-group">
              <label for="phone">Phone:</label>
              <input type="number" class="form-control" name="phone" required />
            </div>
            <div class="col-md-6 form-group">
              <label for="gender">Gender:</label>
              <select class="form-control" name="gender" data-validation="required">
                <option value="">Select Option</option>
                <option value="M">Male</option>
                <option value="F">Female</option>
                <option value="O">Other</option>
              </select>
            </div>

            <div class="col-md-6 form-group">
              <label><b>Date of Birth</b></label>
              <input type="date" value="" name="dob" class="form-control" />
            </div>

            <div class="col-md-12 form-group">
              <label for="role">Role:</label>
              <select class="form-control" name="roles"> </select>
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="form-group row">
            <div class="col-sm-4 col-sm-offset-2">
              <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">
                Close
              </button>
              <button class="btn btn-primary btn-sm" type="submit">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
