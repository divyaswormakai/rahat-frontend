<!DOCTYPE html>
<html>

<head>
  <% include ../_layouts/head %>
  <link href="/css/plugins/datatables/datatables.min.css" rel="stylesheet" />
  <link href="/css/plugins/select2/select2.min.css" rel="stylesheet" />
  <style>
    .alignstatus {
      align-self: center;
    }

    .ibox-title {
      padding: 15px 40px 5px 40px;
    }
  </style>
</head>

<body class="md-skin">
  <% include ../_layouts/header %>
  <div id="wrapper">
    <% include ../_layouts/sidebar %>
    <div id="page-wrapper" class="gray-bg">
      <% include ../_layouts/search %>

      <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
          <div class="col-lg-12">
            <div class="ibox">
              <div class="ibox-title">
                <div class="m-b-lg">
                  <div class="row">
                    <div class="col-md-6 input-group input-group-sm">
                      <label>
                        <h4>
                          Aid Project:
                          <small class="badge badge-warning" style="font-weight: normal;" id="txtFilter"></small></h4>
                      </label>
                      &nbsp;
                      <select id="be_aid_select" value="" name="aidId" class="form-control" data-validation="required">
                        <option value="">All Beneficiary</option>
                      </select>
                      <!-- <div col-lg-6 class="alert alert-info">
                        How quickly daft jumping zebras vex.
                        <a class="alert-link" href="#">Alert Link</a>.
                      </div> -->
                    </div>
                    <div class="col-lg-6">
                      <button id="btnUploadData" class="btn btn-primary">
                        <i class="fa fa-plus-circle"></i>&nbsp;Upload Beneficiary Data
                      </button>
                    </div>
                  </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="row">
                  <div class="col-sm-4">
                    <h2>
                      Beneficiaries
                      <small class="badge badge-warning" style="font-weight: normal;" id="txtFilter"></small>
                    </h2>
                  </div>

                  <div class="col-sm-6"></div>
                  <div class="col-sm-2 text-right">
                    <button id="btnBeneficiaryAdd" class="btn btn-primary">
                      <i class="fa fa-plus-circle"></i>&nbsp;Add Beneficiary
                    </button>
                  </div>
                </div>
              </div>
              <div class="ibox-content" style="padding-top: 5px; min-height: 500px;">
                <div class="table-responsive">
                  <table id="beneficiary-table" class="table table-striped table-bordered table-hover">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Tokens</th>
                        <th>Issue Tokens</th>
                        <!-- <th width="100" style="text-align: center;">Action</th> -->
                      </tr>
                    </thead>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% include ../_layouts/footer %>
    </div>
  </div>
  <% include ../_layouts/foot %>

  <!--Data Tables -->
  <script type="text/javascript" language="javascript" src="/js/plugins/datatables/datatables.min.js"></script>

  <script src="/js/plugins/select2/select2.min.js"></script>
  <script src="/js/app/beneficiary.js"></script>

</body>

</html>

<%- include('./add', {id: "mdlBeneficiaryAdd"}) %> <%- include('./upload', {id: "mdlUploadForm"}) %>